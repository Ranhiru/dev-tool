
# common PATH
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# node?
if test -d /usr/local/share/npm/bin; then
  export PATH=/usr/local/share/npm/bin/:$PATH
fi

# cabal?
if test -d ~/.cabal/bin; then
  export PATH=~/.cabal/bin:$PATH
fi

# ruby?
rubies=`ls -d ~/.gem/*/* | egrep '([0-9]\.)+[0-9]$'`
for path in $rubies ~
do
  if test -d $path; then
    export PATH=$path/bin:$PATH
  fi
done

# monkey patch for bundler
if test -d ~/.config/bundler; then
  export RUBYOPT=-I~/.config/bundler
fi

# locale
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# other settings
export EDITOR=vim
export DISPLAY=localhost:0.0

# start fishing...
if test $(which fish 2> /dev/null); then
  stty=`stty -g`
  fish
  stty $stty
fi

# homebrew bash completion
if test $(which brew 2> /dev/null); then
  if test -f `brew --prefix`/Library/Contributions/brew_bash_completion.sh; then
    source `brew --prefix`/Library/Contributions/brew_bash_completion.sh
  fi

  if test -f `brew --prefix`/etc/bash_completion; then
    source `brew --prefix`/etc/bash_completion
  fi
fi

# rvm scripts
if test -e ~/.rvm/scripts/rvm; then
  source ~/.rvm/scripts/rvm
fi

bash_prompt(){ PS1=`prompt.rb`; }
export PROMPT_COMMAND=bash_prompt

# probably should be inside .bashrc?
# linux bash specific
if   test $(uname) = 'Linux'; then
  alias ls='ls --color'
  alias ll='ls -l'
  alias la='ll -a'
# mac bash specific
elif test $(uname) = 'Darwin'; then
  alias ls='ls -Gw'
  alias ll='ls -lhw'
  alias la='ll -a'
fi
