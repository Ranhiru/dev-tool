#!/usr/bin/env ruby

def sh command
  puts(command)
  exit(1) unless system(command)
end

name, version = ARGV
gem name, version if version

if path = Gem.find_files("#{name}.rb").first
  if path_gem = Gem.path.find{ |p| break $1 if path =~ %r{(#{p}(/[^/]+){2})} }
    sh("eit #{path_gem}")
  else
    sh("eit #{path}")
  end
else
  puts("404 Not Found")
  exit(1)
end
