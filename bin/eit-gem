#!/usr/bin/env ruby

def sh command
  puts(command)
  exit(1) unless system(command)
end

name, version = ARGV
begin
  gem name, version
rescue LoadError
end

# find the exact gem
if path_gem = Gem.path.find{ |base|
     path_gem = $LOAD_PATH.find{ |path|
       path_gem = path[%r{#{base}/gems/#{name}\-[^/]+/}]
       break path_gem if path_gem
     }
     break path_gem if path_gem
   }
  sh("eit #{path_gem}")

# find the require file
elsif path = Gem.find_files("#{name}.rb").first
  # favor gem first (e.g. rake gem)
  if path_gem = Gem.path.find{ |p| break $1 if path =~ %r{(#{p}(/[^/]+){2})} }
    sh("eit #{path_gem}")
  else
    sh("eit #{path}")
  end

else
  puts("404 Not Found")
  exit(1)
end

__END__
tests:
eit-gem rib/version
eit-gem rib/version '~>1.0.0'
eit-gem rib
eit-gem rib 1.0.0
eit-gem yaml
eit-gem yaml/store
