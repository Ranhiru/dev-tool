#!/usr/bin/env ruby

def sh command
  puts command
  `#{command}`
end

name, version = ARGV
gem name, version if version

if path = Gem.find_files(name).first
  if path_gem = path[Regexp.new("#{Gem.path.first}(/[^/]+){2}")]
    sh("mate #{path_gem}")
  else
    sh("mate #{path}")
  end
else
  puts("404 Not Found")
  exit(1)
end
